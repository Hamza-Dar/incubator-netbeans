<project name="tomcat" basedir="." default="build-pkg">

  <property name="appname" value="apache-tomcat-6.0.16"/>
  <property name="appdir" value="build/app"/>
  <property name="zipname" value="tomcat-macosx.zip"/>
  <property name="appversion" value="6.0.16"/>
  <property name="version" value="6.0.16"/>
  <property name="exename" value=""/>
  <property name="icon" value=""/>
  <property name="pmproj" value="pkg/tomcat.pmproj"/>

  <import file="${basedir}/../template_mac.xml"/>

  <target name="clean-impl">
    <delete dir="tomcat"/>
    <delete file="tomcat_image.zip"/>
    <delete file="pkg/scripts/add_tc.sh"/>
    <delete file="pkg/scripts/unpack200.sh"/>
    <delete file="pkg/scripts/env.sh"/>
    <delete file="pkg/scripts/perm.sh"/>
  </target>

  <target name="get-bits">
    <echo message="Downloading Tomcat from ${tc_source}" />
    <get src="${tc_source}" dest="tomcat_image.zip" usetimestamp="true"/>
  </target>

  <target name="unzip">
    <echo message="Unzipping Tomcat" />
    <exec executable="sh" failonerror="yes">
      <arg value="-c"/>
      <arg value="cd ${basedir} ; unzip tomcat_image.zip -d ${appdir}"/>
    </exec>
    <!-- move stuff one level up -->
    <exec executable="sh" failonerror="yes">
      <arg value="-c"/>
      <arg value="cd ${appdir} ; mv apache-tomcat-*/* . ; rmdir apache-tomcat-*"/>
    </exec>
    <!-- make sure all bin/*.sh files has executable permissions-->
    <exec executable="sh" failonerror="yes">
      <arg value="-c"/>
      <arg value="cd ${appdir} ; chmod a+x bin/*.sh"/>
    </exec>
  </target>

  <target name="pre-build-pkg">
    <copy file="${basedir}/../pkg/scripts/add_tc.sh" tofile="${basedir}/pkg/scripts/add_tc.sh"/>
    <copy file="${basedir}/../pkg/scripts/unpack200.sh" tofile="${basedir}/pkg/scripts/unpack200.sh"/>
    <copy file="${basedir}/../pkg/scripts/env.sh" tofile="${basedir}/pkg/scripts/env.sh"/>
    <copy file="${basedir}/../pkg/scripts/perm.sh" tofile="${basedir}/pkg/scripts/perm.sh"/>
  </target>
</project>
